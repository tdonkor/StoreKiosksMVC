

@model IEnumerable<StoreKiosksMVC.Models.Kiosk>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @Model.Count() Store Kiosks. </h2>

<p>
    @Html.ActionLink("Create a new Kiosk", "Create", new { cust = TempData["Customer"] }, null)
</p>
<table class="table table-striped" style="font-size:large">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KioskId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KioskName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KioskId)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.StoreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.KioskName)
            </td>
            <td>
                @Html.ActionLink("Edit Kiosk", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Kiosk Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete Kiosk", "Delete", new { id = item.Id }, new { @style = "color:red;" })
            </td>
        </tr>
    }

</table>
<div style="font-size:large">

    <b>@Html.ActionLink("Back to Store list", "Index", "Stores", new { cust = TempData["Customer"] }, null)</b>
</div>