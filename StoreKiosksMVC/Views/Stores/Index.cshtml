@model IEnumerable<StoreKiosksMVC.Models.Store>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var storeNumbers = "Stores";
}
@if (Model.Count() == 1)
{
    storeNumbers = "Store";
}
<h2> @Model.Count() @storeNumbers for @TempData["Customer"] </h2>

<form method="get">
    <input type="hidden" name="cust" value=@TempData["Customer"] />
    <input type="search" name="searchTerm" />
    <input type="submit" value="Search by Name" />
</form>

<br /><br />
<table class="table table-striped" style="font-size:large">
    <tr>
        @*<th>
                @Html.DisplayName("Store Id")
            </th>*@
        <th>
            @Html.DisplayName("Store Name")
        </th>
      
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>

            <td>
                @Html.ActionLink("Edit Store", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Store Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Store Kiosks", "Index", "Kiosks", new { storeId = item.Id, cust = item.Customer }, null) |
                @Html.ActionLink("Delete Store", "Delete", new { id = item.Id }, new { @style = "color:red;" })
            </td>
        </tr>

    }

</table>
<p style="font-size:large">
    <b>@Html.ActionLink("Create a new Store", "Create", new { cust = TempData["Customer"] }, null)
    <br /> <br />
    @Html.ActionLink(" Back to Customer list", "Index", "Home")</b>
</p>